<%= simple_form_for(@project) do |f| %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :goal %>
    <%= f.input :summary %>
    <%= f.association :stage, collection: @project.stages %>
    <br>
  </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>

<% end %>


